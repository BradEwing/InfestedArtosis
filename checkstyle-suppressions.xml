<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Debug rendering class uses magic numbers for screen coordinates -->
    <suppress checks="MagicNumber" files="Debug\.java"/>
    <!-- Debug rendering has complex dispatch logic -->
    <suppress checks="CyclomaticComplexity" files="Debug\.java"/>
    <!-- Build order files are declarative with game-specific constants -->
    <suppress checks="MagicNumber" files="strategy[\\/]buildorder[\\/].*\.java"/>
    <!-- Build order plan() methods have inherently complex game state branching -->
    <suppress checks="CyclomaticComplexity" files="strategy[\\/]buildorder[\\/].*\.java"/>
    <!-- Test files use magic numbers for test data -->
    <suppress checks="MagicNumber" files="[\\/]test[\\/].*\.java"/>
    <!-- Test files don't need Javadoc validation -->
    <suppress checks="JavadocMethod" files="[\\/]test[\\/].*\.java"/>
</suppressions>
